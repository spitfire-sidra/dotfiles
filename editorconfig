# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js,py}]
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.{js,yaml,html,json}]
indent_style = space
indent_size = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[makefile]
indent_style = tab

[*.go]
indent_style = tab
